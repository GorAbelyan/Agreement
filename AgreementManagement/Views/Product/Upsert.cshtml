@model Models.ViewModel.ProductVM
@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create New Product";
}
<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Product.Id!= 0)
        {
            title = "Update Product";
        }

        <div class="hide">
            <input asp-for="Product.Id" class="form-control" hidden />
            <span asp-validation-for="Product.Id" class="text-danger"></span>
        </div>

        <div class="col-12 border-bottom">
            <h2 class="text-dark">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4 p-3">
                    <label asp-for="Product.ProdGroup.GroupCode"></label>
                </div>
                <div class="col-8 p-3">
                    <div class="col-8  p-3">
                        <div class="col-8 p-3">
                            @Html.DropDownListFor(m => m.Product.ProductGroupID, Model.ProductGroups, "-Select a Product Group", new { @class = "form-control" })
                            <span asp-validation-for="Product.ProdGroup" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-4 p-3">
                    <label class="align-content-center" asp-for="Product.Price"></label>
                </div>
                <div class="col-8  p-3">
                    <div class="col-8  p-3">
                        <input  asp-for="Product.Price" placeholder="Date to" autocomplete="none" class="datepicker d-block ms-1 float-end" id="effective_date">
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-4 p-3">
                    <label asp-for="Product.ProductNumber"></label>
                </div>
                <div class="col-8  p-3">
                    <div class="col-8  p-3">
                        <input asp-for="Product.ProductNumber"  placeholder="Date to" autocomplete="none" class="datepicker d-block ms-1 float-end" id="expiration_date">
                        <span asp-validation-for="Product.ProductNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-4 p-3">
                    <label asp-for="Product.ProductDescription"></label>
                </div>
                <div class="col-8 p-3">
                    <input asp-for="Product.ProductDescription" class="form-control" />
                    <span asp-validation-for="Product.ProductDescription" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class="form-group row">
                    <div class="col-8 offset-4">
                        @if (Model.Product.Id != 0)
                        {
                            <partial name="_EditAndBackToListButton" model="Model.Product.Id" />
                        }
                        else
                        {
                            <partial name="_CreateAndBackToListButton" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    <script src="~/js/productGroup.js"></script>
    <partial name="_ValidationScriptsPartial" />
}


