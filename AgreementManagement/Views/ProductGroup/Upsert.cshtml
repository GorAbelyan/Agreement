@model Models.ProductGroup
@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create New Agreement";
}
<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Id != 0)
        {
            title = "Update Product Group";
        }

        <div class="hide">
            <input asp-for="Id" class="form-control" hidden />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>

        <div class="col-12 border-bottom">
            <h2 class="text-dark">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4 p-3">
                    <label asp-for="GroupCode"></label>
                </div>
                <div class="col-8 p-3">
                    <div class="col-8  p-3">
                        <div class="col-8 p-3">
                            <input asp-for="GroupCode" class="form-control" />
                            <span asp-validation-for="GroupCode" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-4 p-3">
                    <label class="align-content-center" asp-for="GroupDescription"></label>
                </div>
                <div class="col-8 p-3">
                    <div class="col-8  p-3">
                        <div class="col-8 p-3">
                            <input asp-for="GroupDescription" class="form-control" />
                            <span asp-validation-for="GroupDescription" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-4 p-3">
                    <label class="align-content-center" asp-for="Active"></label>
                </div>
                <div class="checkbox">
                    <label asp-for="Active">
                        <input asp-for="Active" />
                    </label>
                </div>


            </div>
            <div>
                <div class="form-group row">
                    <div class="col-8 offset-4">
                        @if (Model.Id != 0)
                        {
                            <partial name="_EditAndBackToListButton" model="Model.Id" />
                        }
                        else
                        {
                            <partial name="_CreateAndBackToListButton" />
                        }
                    </div>
                </div>
            </div>
        </div>
</form>
@section Scripts{
    <script src="~/js/datapicker.js"></script>
    <partial name="_ValidationScriptsPartial" />
}


