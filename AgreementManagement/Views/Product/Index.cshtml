@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-dark">Product List </h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn text-light bg-dark float-end" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp;Create new Product</a>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <div class="overflow-auto">
        <table id="tblData"  class="table table-striped table-bordered text-dark bg-light" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-dark">
                    <th>Product Group Code</th>
                    <th>Product Description</th>
                    <th>Product Number </th>
                    <th>Price </th>
                    <th>Active </th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>




@section Scripts{
    <script src="~/js/product.js"></script>
}


